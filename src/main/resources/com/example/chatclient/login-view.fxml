            <Image url="@loginPic.png" />
         </image>
         <FlowPane.margin>
            <Insets bottom="20.0" />
         </FlowPane.margin>
      </ImageView>
      <HBox prefHeight="30.0" prefWidth="400.0" style="-fx-alignment: center;">
         <children>
            <Label alignment="CENTER" contentDisplay="CENTER" text="账号">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></Label>
            <TextField fx:id="idLabel" />
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="400.0" style="-fx-alignment: center;">
         <children>
            <Label alignment="CENTER" text="密码">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin></Label>
            <PasswordField fx:id="pwdLabel" />
         </children>
      </HBox>
      <HBox prefHeight="40.0" prefWidth="400.0" style="-fx-alignment: center;">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onMouseClicked="#clickLoginButton" text="登录">
               <HBox.margin>
                  <Insets right="30.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="registerButton" mnemonicParsing="false" onMouseClicked="#clickRegisterButton" text="注册">
               <HBox.margin>
                  <Insets left="30.0" />
               </HBox.margin>
            </Button>
         </children>
         <FlowPane.margin>
            <Insets top="20.0" />
         </FlowPane.margin>
      </HBox>
   </children>
</FlowPane>
